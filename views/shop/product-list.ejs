<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="https://image.ceneostatic.pl/data/products/74115249/f-women-s-running-shoes-female-sneakers-outdoor-soft-sport-shoes-woman-eu-39-gray.jpg"
                        alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$100</h2>
                    <p class="product__description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab
                        distinctio neque quisquam obcaecati omnis soluta illum at possimus reiciendis, laboriosam
                        adipisci incidunt architecto consectetur expedita fugiat perspiciatis, ipsa odit assumenda.
                    </p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>